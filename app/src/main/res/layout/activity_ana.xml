<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:paddingBottom="10dp"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onlyuniquesoft.servis.AnaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bim"
        android:layout_below="@+id/txtVmesaj" />

    <TextView
        android:id="@+id/txtVmesaj"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Hosgeldin Ahmet"
        android:layout_marginBottom="9dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/buttonSiparisVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIparIs Ver"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#FFE20808"
        android:layout_above="@+id/buttonIndirimler"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:id="@+id/buttonSepetim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="#FFE20808"
        android:text="SepetIm"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/buttonIndirimler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IndIrImler"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_above="@+id/buttonSepetim"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="#FFE20808"
        />






</RelativeLayout>
